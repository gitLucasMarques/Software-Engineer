{
  "name": "game-ecommerce-backend",
  "version": "1.0.0",
  "description": "E-commerce de jogos",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "seed": "node scripts/seed.js",
    "seed:games": "node scripts/seed-games.js",
    "seed:hardware": "node scripts/seed-hardware.js",
    "seed:all": "npm run seed:games && npm run seed:hardware",
    "setup:categories": "node scripts/setup-categories.js",
    "reset-db": "node scripts/reset-db.js",
    "setup": "npm run reset-db && npm run seed && npm run setup:categories",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:config": "jest tests/config",
    "test:utils": "jest tests/utils",
    "test:models": "jest tests/models",
    "test:controllers": "jest tests/controllers",
    "test:services": "jest tests/services",
    "test:routes": "jest tests/routes"
  },
  "dependencies": {
    "@paypal/paypal-server-sdk": "^1.0.1",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.0.0",
    "express-session": "^1.18.2",
    "express-validator": "^6.15.0",
    "helmet": "^7.2.0",
    "jsonwebtoken": "^9.0.2",
    "mercadopago": "^2.9.0",
    "mongoose": "^8.19.4",
    "multer": "^2.0.2",
    "nodemailer": "^7.0.10",
    "qrcode": "^1.5.4",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "jest": "^29.7.0",
    "nodemon": "^3.0.3",
    "supertest": "^7.1.4"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/tests/setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "config/**/*.js",
      "!src/server.js",
      "!**/node_modules/**"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "verbose": true
  }
}
